{
	"name": "JEXPLORER",
	"displayName": "JEXPLORER",
	"publisher": "JUNGHO",
	"icon": "logo_image.png",
	"license": "Apache-2.0",
	"version": "2.0.5",
	"description": "Real-time synchronized bookmarks for VSCode with .bookmark folder-based organization",
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/JUNGHO-GIT/JEXPLORER.git"
	},
	"engines": {
		"vscode": "^1.103.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"explorer",
		"bookmark",
		"sync",
		"realtime",
		"file",
		"manager",
		"watcher"
	],
	"activationEvents": [
		"onView:JEXPLORER",
		"onCommand:JEXPLORER.additem",
		"onCommand:JEXPLORER.refreshentry",
		"onCommand:JEXPLORER.copyitem",
		"onCommand:JEXPLORER.pasteitem",
		"onCommand:JEXPLORER.pasteroot",
		"onCommand:JEXPLORER.removeitem",
		"onCommand:JEXPLORER.removeallitems",
		"onCommand:JEXPLORER.createfolder",
		"onCommand:JEXPLORER.createfile"
	],
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "JEXPLORER",
					"name": "BOOKMARK",
					"icon": "$(bookmark)",
					"when": "workspaceFolderCount > 0"
				}
			]
		},
		"commands": [
			{
				"command": "JEXPLORER.additem",
				"title": "Add to Bookmarks",
				"category": "JEXPLORER"
			},
			{
				"command": "JEXPLORER.refreshentry",
				"title": "Refresh Bookmarks",
				"category": "JEXPLORER",
				"icon": "$(refresh)"
			},
			{
				"command": "JEXPLORER.copyitem",
				"title": "Copy",
				"category": "JEXPLORER",
				"icon": "$(copy)"
			},
			{
				"command": "JEXPLORER.pasteitem",
				"title": "Paste",
				"category": "JEXPLORER",
				"icon": "$(replace-all)"
			},
			{
				"command": "JEXPLORER.pasteroot",
				"title": "Paste to Root",
				"category": "JEXPLORER",
				"icon": "$(replace-all)"
			},
			{
				"command": "JEXPLORER.createfolder",
				"title": "Create Folder",
				"category": "JEXPLORER",
				"icon": "$(new-folder)"
			},
			{
				"command": "JEXPLORER.createfile",
				"title": "Create File",
				"category": "JEXPLORER",
				"icon": "$(new-file)"
			},
			{
				"command": "JEXPLORER.removeitem",
				"title": "Remove",
				"category": "JEXPLORER",
				"icon": "$(remove-close)"
			},
			{
				"command": "JEXPLORER.removeallitems",
				"title": "Remove All",
				"category": "JEXPLORER",
				"icon": "$(terminal-kill)"
			}
		],
		"keybindings": [
			{
				"key": "shift+alt+a",
				"command": "JEXPLORER.additem",
				"when": "focusedView == JEXPLORER"
			},
			{
				"key": "shift+alt+a",
				"command": "JEXPLORER.additem",
				"when": "explorerViewletVisible && filesExplorerFocus"
			},
			{
				"key": "ctrl+c",
				"command": "JEXPLORER.copyitem",
				"when": "focusedView == JEXPLORER"
			},
			{
				"key": "ctrl+v",
				"command": "JEXPLORER.pasteitem",
				"when": "focusedView == JEXPLORER"
			},
			{
				"key": "ctrl+d",
				"command": "JEXPLORER.removeitem",
				"when": "focusedView == JEXPLORER"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "JEXPLORER.refreshentry",
					"when": "view == JEXPLORER",
					"group": "navigation"
				},
				{
					"command": "JEXPLORER.copyitem",
					"when": "view == JEXPLORER",
					"group": "navigation"
				},
				{
					"command": "JEXPLORER.pasteroot",
					"when": "view == JEXPLORER",
					"group": "navigation"
				},
				{
					"command": "JEXPLORER.removeallitems",
					"when": "view == JEXPLORER",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "JEXPLORER.copyitem",
					"when": "view == JEXPLORER",
					"group": "1_clipboard@1"
				},
				{
					"command": "JEXPLORER.pasteitem",
					"when": "view == JEXPLORER && viewItem == bookmarkFolder",
					"group": "1_clipboard@2"
				},
				{
					"command": "JEXPLORER.pasteitem",
					"when": "view == JEXPLORER && viewItem == bookmarkFile",
					"group": "1_clipboard@3"
				},
				{
					"command": "JEXPLORER.createfolder",
					"when": "view == JEXPLORER && viewItem == bookmarkFolder",
					"group": "2_modification@1"
				},
				{
					"command": "JEXPLORER.createfile",
					"when": "view == JEXPLORER && viewItem == bookmarkFolder",
					"group": "2_modification@2"
				},
				{
					"command": "JEXPLORER.removeitem",
					"when": "view == JEXPLORER",
					"group": "4_danger@1"
				},
				{
					"command": "JEXPLORER.removeitem",
					"when": "view == JEXPLORER",
					"group": "inline"
				}
			],
			"explorer/context": [
				{
					"command": "JEXPLORER.additem",
					"when": "explorerResourceIsFolder || explorerResourceIsFile",
					"group": "2_workspace@1"
				}
			]
		},
		"configuration": {
			"title": "JEXPLORER",
			"properties": {
				"JEXPLORER.autoRefresh": {
					"type": "boolean",
					"default": true,
					"description": "Automatically refresh bookmarks when files change"
				},
				"JEXPLORER.showSyncStatus": {
					"type": "boolean",
					"default": true,
					"description": "Show synchronization status in bookmark items"
				},
				"JEXPLORER.confirmDelete": {
					"type": "boolean",
					"default": true,
					"description": "Confirm before removing bookmarks"
				}
			}
		}
	},
	"scripts": {
		"watch": "tsc -watch -p .",
		"compile": "tsc -p .",
		"vsce": "vsce package",
		"gcloud-deploy": "node .node/gcloud.cjs --full-deploy",
		"pnpm-reset": "pwsh -NoProfile -Command \"try { Stop-Process -Name node -Force -ErrorAction SilentlyContinue } catch {}; Start-Sleep -Milliseconds 200; if (Test-Path 'node_modules') { cmd /c 'rd /s /q \"node_modules\"' } ; if (Test-Path 'package-lock.json') { cmd /c 'del /f /q \"package-lock.json\"' } ; pnpm install\""
	},
	"dependencies": {
		"@babel/core": "^7.28.4",
		"glob": "^11.0.3",
		"terser": "^5.44.0"
	},
	"devDependencies": {
		"@types/glob": "^9.0.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.3.1",
		"@types/vscode": "^1.103.0",
		"@typescript-eslint/eslint-plugin": "^8.42.0",
		"@typescript-eslint/parser": "^8.42.0",
		"@vscode/vsce": "^3.6.0",
		"eslint": "^9.35.0",
		"mocha": "^11.7.2",
		"typescript": "^5.9.2",
		"vscode-test": "^1.6.1"
	}
}