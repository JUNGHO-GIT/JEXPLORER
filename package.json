{
	"name": "JEXPLORER",
	"displayName": "JEXPLORER",
	"publisher": "JUNGHO",
	"icon": "logo_image.png",
	"license": "Apache-2.0",
	"version": "1.1.4",
	"description": "Quickly access important folders and files in VSCode",
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/JUNGHO-GIT/JEXPLORER.git"
	},
	"engines": {
		"vscode": "^1.95.0",
		"node": ">=18.0.0",
		"npm": ">=10.0.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"explorer",
		"folder",
		"bookmark",
		"file",
		"focus",
		"manager",
		"finder",
		"drawer"
	],
	"contributes": {
		"viewsWelcome": [
			{
				"view": "JEXPLORER",
				"contents": "Right click and add a file or folder"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "JEXPLORER",
					"name": "JEXPLORER"
				}
			]
		},
		"commands": [
			{
				"command": "JEXPLORER.refreshentry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "JEXPLORER.selectitem",
				"title": "Select/Focus"
			},
			{
				"command": "JEXPLORER.additem",
				"title": "Add Bookmark"
			},
			{
				"command": "JEXPLORER.removeitem",
				"title": "Remove",
				"icon": "$(close)"
			},
			{
				"command": "JEXPLORER.removeallitems",
				"title": "Remove All",
				"icon": "$(trash)"
			},
			{
				"command": "JEXPLORER.cantremoveitem",
				"title": "Cannot Remove"
			}
		],
		"keybindings": [
			{
				"key": "shift+alt+a",
				"command": "JEXPLORER.additem"
			},
			{
				"key": "shift+alt+s",
				"command": "JEXPLORER.selectitem"
			},
			{
				"key": "shift+alt+d",
				"command": "JEXPLORER.removeitem",
				"when": "view.JEXPLORER.visible"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "JEXPLORER.refreshentry",
					"when": "view == JEXPLORER",
					"group": "navigation"
				},
				{
					"command": "JEXPLORER.removeallitems",
					"when": "view == JEXPLORER",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "JEXPLORER.additem"
				}
			],
			"view/item/context": [
				{
					"command": "JEXPLORER.removeitem",
					"when": "view == JEXPLORER && viewItem == directlyBookmarkedDirectory"
				},
				{
					"command": "JEXPLORER.removeitem",
					"when": "view == JEXPLORER && viewItem == directlyBookmarkedDirectory",
					"group": "inline"
				},
				{
					"command": "JEXPLORER.cantremoveitem",
					"when":  "view == JEXPLORER && viewItem != directlyBookmarkedDirectory"
				}
			]
		}
	},
	"scripts": {
		"watch": "tsc -watch -p .",
		"compile": "tsc -p .",
		"vsce": "vsce package",
		"npm-reset": "powershell -Command \"Remove-Item -Recurse -Force package-lock.json, node_modules; npm install --legacy-peer-deps;\"",
		"gcloud": "node gcloud.cjs"
	},
	"dependencies": {
		"@babel/core": "^7.26.0",
		"glob": "^11.0.0",
		"terser": "^5.36.0",
		"yaml": "^2.8.0"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^8.2.3",
		"@types/node": "^12.20.55",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"eslint": "^7.32.0",
		"glob": "^7.2.3",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5",
		"vscode-test": "^1.6.1"
	}
}
