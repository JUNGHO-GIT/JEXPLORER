{
	"name": "JEXPLORER",
	"displayName": "JEXPLORER",
	"publisher": "JUNGHO",
	"icon": "logo_image.png",
	"license": "Apache-2.0",
	"version": "2.0.0",
	"description": "Real-time synchronized bookmarks for VSCode with .bookmark folder-based organization",
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/JUNGHO-GIT/JEXPLORER.git"
	},
	"engines": {
		"vscode": "^1.95.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"explorer",
		"bookmark",
		"sync",
		"realtime",
		"file",
		"manager",
		"watcher"
	],
	"activationEvents": [
		"onView:JEXPLORER",
		"onCommand:JEXPLORER.additem",
		"onCommand:JEXPLORER.refreshentry",
		"onCommand:JEXPLORER.undo",
		"onCommand:JEXPLORER.redo",
		"onCommand:JEXPLORER.copyitem",
		"onCommand:JEXPLORER.pasteitem",
		"onCommand:JEXPLORER.removeitem",
		"onCommand:JEXPLORER.removeallitems",
		"onCommand:JEXPLORER.createfolder",
		"onCommand:JEXPLORER.createfile"
	],
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "JEXPLORER",
					"name": "JEXPLORER",
					"icon": "logo_image.png",
					"when": "workspaceFolderCount > 0"
				}
			]
		},
		"commands": [
			{
				"command": "JEXPLORER.additem",
				"title": "Add to Bookmarks",
				"category": "JEXPLORER"
			},
			{
				"command": "JEXPLORER.refreshentry",
				"title": "Refresh Bookmarks",
				"category": "JEXPLORER",
				"icon": "$(refresh)"
			},
			{
				"command": "JEXPLORER.undo",
				"title": "Undo",
				"category": "JEXPLORER",
				"icon": "$(discard)"
			},
			{
				"command": "JEXPLORER.redo",
				"title": "Redo",
				"category": "JEXPLORER",
				"icon": "$(redo)"
			},
			{
				"command": "JEXPLORER.copyitem",
				"title": "Copy Item",
				"category": "JEXPLORER",
				"icon": "$(copy)"
			},
			{
				"command": "JEXPLORER.pasteitem",
				"title": "Paste Item",
				"category": "JEXPLORER",
				"icon": "$(paste)"
			},
			{
				"command": "JEXPLORER.createfolder",
				"title": "Create Folder",
				"category": "JEXPLORER",
				"icon": "$(new-folder)"
			},
			{
				"command": "JEXPLORER.createfile",
				"title": "Create File",
				"category": "JEXPLORER",
				"icon": "$(new-file)"
			},
			{
				"command": "JEXPLORER.removeitem",
				"title": "Remove Bookmark",
				"category": "JEXPLORER",
				"icon": "$(trash)"
			},
			{
				"command": "JEXPLORER.removeallitems",
				"title": "Remove All Bookmarks",
				"category": "JEXPLORER"
			}
		],
		"keybindings": [
			{
				"key": "shift+alt+a",
				"command": "JEXPLORER.additem",
				"when": "view == JEXPLORER && viewItem == resource"
			},
			{
				"key": "shift+alt+a",
				"command": "JEXPLORER.additem",
				"when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
			},
			{
				"key": "ctrl+d",
				"command": "JEXPLORER.removeitem",
				"when": "view == JEXPLORER && viewItem == resource && !inputFocus"
			},
			{
				"key": "ctrl+z",
				"command": "JEXPLORER.undo",
				"when": "view == JEXPLORER && !inputFocus"
			},
			{
				"key": "shift+ctrl+z",
				"command": "JEXPLORER.redo",
				"when": "view == JEXPLORER && !inputFocus"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "JEXPLORER.refreshentry",
					"when": "view == JEXPLORER",
					"group": "navigation@1"
				},
				{
					"command": "JEXPLORER.undo",
					"when": "view == JEXPLORER",
					"group": "navigation@2"
				},
				{
					"command": "JEXPLORER.redo",
					"when": "view == JEXPLORER",
					"group": "navigation@3"
				},
				{
					"command": "JEXPLORER.createfolder",
					"when": "view == JEXPLORER",
					"group": "1_modification@1"
				},
				{
					"command": "JEXPLORER.createfile",
					"when": "view == JEXPLORER",
					"group": "1_modification@2"
				},
				{
					"command": "JEXPLORER.pasteitem",
					"when": "view == JEXPLORER",
					"group": "2_workspace@1"
				}
			],
			"view/item/context": [
				{
					"command": "JEXPLORER.copyitem",
					"when": "view == JEXPLORER",
					"group": "1_clipboard@1"
				},
				{
					"command": "JEXPLORER.pasteitem",
					"when": "view == JEXPLORER && viewItem == bookmarkFolder",
					"group": "1_clipboard@2"
				},
				{
					"command": "JEXPLORER.pasteitem",
					"when": "view == JEXPLORER && viewItem == bookmarkFile",
					"group": "1_clipboard@3"
				},
				{
					"command": "JEXPLORER.createfolder",
					"when": "view == JEXPLORER && viewItem == bookmarkFolder",
					"group": "2_modification@1"
				},
				{
					"command": "JEXPLORER.createfile",
					"when": "view == JEXPLORER && viewItem == bookmarkFolder",
					"group": "2_modification@2"
				},
				{
					"command": "JEXPLORER.removeitem",
					"when": "view == JEXPLORER",
					"group": "4_danger@1"
				},
				{
					"command": "JEXPLORER.removeitem",
					"when": "view == JEXPLORER",
					"group": "inline"
				}
			],
			"explorer/context": [
				{
					"command": "JEXPLORER.additem",
					"when": "explorerResourceIsFolder || explorerResourceIsFile",
					"group": "2_workspace@1"
				}
			]
		},
		"configuration": {
			"title": "JEXPLORER",
			"properties": {
				"JEXPLORER.autoRefresh": {
					"type": "boolean",
					"default": true,
					"description": "Automatically refresh bookmarks when files change"
				},
				"JEXPLORER.showSyncStatus": {
					"type": "boolean",
					"default": true,
					"description": "Show synchronization status in bookmark items"
				},
				"JEXPLORER.confirmDelete": {
					"type": "boolean",
					"default": true,
					"description": "Confirm before removing bookmarks"
				}
			}
		}
	},
	"scripts": {
		"watch": "tsc -watch -p .",
		"compile": "tsc -p .",
		"vsce": "vsce package",
		"npm-reset": "powershell -Command \"Remove-Item -Recurse -Force package-lock.json, node_modules; npm install --legacy-peer-deps;\"",
		"gcloud": "node gcloud.cjs"
	},
	"dependencies": {
		"@babel/core": "^7.28.3",
		"glob": "^11.0.3",
		"terser": "^5.43.1",
		"yaml": "^2.8.1"
	},
	"devDependencies": {
		"@types/glob": "^9.0.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.3.0",
		"@types/vscode": "^1.103.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"eslint": "^9.34.0",
		"mocha": "^11.7.1",
		"typescript": "^5.9.2",
		"vscode-test": "^1.6.1"
	}
}