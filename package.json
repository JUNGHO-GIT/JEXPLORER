{
	"name": "JEXPLORER",
	"displayName": "JEXPLORER",
	"publisher": "JUNGHO",
	"icon": "logo_image.png",
	"license": "Apache-2.0",
	"version": "1.2.0",
	"description": "Quickly access important folders and files in VSCode with copy/paste support",
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/JUNGHO-GIT/JEXPLORER.git"
	},
	"engines": {
		"vscode": "^1.95.0",
		"node": ">=18.0.0",
		"npm": ">=10.0.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"explorer",
		"folder",
		"bookmark",
		"file",
		"focus",
		"manager",
		"finder",
		"drawer",
		"copy",
		"paste",
		"sync"
	],
	"activationEvents": [
		"onView:JEXPLORER",
		"onCommand:JEXPLORER.refreshentry",
		"onCommand:JEXPLORER.selectitem",
		"onCommand:JEXPLORER.additem",
		"onCommand:JEXPLORER.removeitem",
		"onCommand:JEXPLORER.removeallitems",
		"onCommand:JEXPLORER.cantremoveitem",
		"onCommand:JEXPLORER.copyitem",
		"onCommand:JEXPLORER.pasteitem"
	],
	"contributes": {
		"views": {
			"explorer": [
				{
					"icon": "logo_image.png",
					"id": "JEXPLORER",
					"name": "JEXPLORER"
				}
			]
		},
		"commands": [
			{
				"command": "JEXPLORER.refreshentry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "JEXPLORER.selectitem",
				"title": "Select/Focus"
			},
			{
				"command": "JEXPLORER.additem",
				"title": "Add Bookmark",
				"icon": "$(add)"
			},
			{
				"command": "JEXPLORER.removeitem",
				"title": "Remove from Bookmarks",
				"icon": "$(close)"
			},
			{
				"command": "JEXPLORER.removeallitems",
				"title": "Remove All Bookmarks",
				"icon": "$(trash)"
			},
			{
				"command": "JEXPLORER.cantremoveitem",
				"title": "Cannot Remove"
			},
			{
				"command": "JEXPLORER.copyitem",
				"title": "Copy",
				"icon": "$(files)"
			},
			{
				"command": "JEXPLORER.pasteitem",
				"title": "Paste",
				"icon": "$(paste)"
			}
		],
		"keybindings": [
			{
				"key": "shift+alt+a",
				"command": "JEXPLORER.additem",
				"when": "focusedView == JEXPLORER"
			},
			{
				"key": "shift+alt+a",
				"command": "JEXPLORER.additem",
				"when": "explorerViewletVisible && filesExplorerFocus"
			},
			{
				"key": "ctrl+c",
				"command": "JEXPLORER.copyitem",
				"when": "focusedView == JEXPLORER"
			},
			{
				"key": "cmd+c",
				"command": "JEXPLORER.copyitem",
				"when": "focusedView == JEXPLORER && isMac"
			},
			{
				"key": "ctrl+v",
				"command": "JEXPLORER.pasteitem",
				"when": "focusedView == JEXPLORER"
			},
			{
				"key": "cmd+v",
				"command": "JEXPLORER.pasteitem",
				"when": "focusedView == JEXPLORER && isMac"
			},
			{
				"key": "delete",
				"command": "JEXPLORER.removeitem",
				"when": "focusedView == JEXPLORER"
			},
			{
				"key": "enter",
				"command": "JEXPLORER.selectitem",
				"when": "focusedView == JEXPLORER"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "JEXPLORER.refreshentry",
					"when": "view == JEXPLORER",
					"group": "navigation@1"
				},
				{
					"command": "JEXPLORER.removeallitems",
					"when": "view == JEXPLORER",
					"group": "navigation@2"
				}
			],
			"explorer/context": [
				{
					"command": "JEXPLORER.additem",
					"group": "2_workspace@1"
				}
			],
			"view/item/context": [
				{
					"command": "JEXPLORER.selectitem",
					"when": "view == JEXPLORER",
					"group": "1_modification@1"
				},
				{
					"command": "JEXPLORER.copyitem",
					"when": "view == JEXPLORER",
					"group": "1_modification@2"
				},
				{
					"command": "JEXPLORER.pasteitem",
					"when": "view == JEXPLORER",
					"group": "1_modification@3"
				},
				{
					"command": "JEXPLORER.removeitem",
					"when": "view == JEXPLORER && viewItem == directlyBookmarkedDirectory",
					"group": "2_workspace@1"
				},
				{
					"command": "JEXPLORER.removeitem",
					"when": "view == JEXPLORER && viewItem == directlyBookmarkedDirectory",
					"group": "inline"
				},
				{
					"command": "JEXPLORER.cantremoveitem",
					"when": "view == JEXPLORER && viewItem != directlyBookmarkedDirectory",
					"group": "2_workspace@2"
				}
			]
		},
		"configuration": {
			"title": "JEXPLORER",
			"properties": {
				"JEXPLORER.saveWorkspace": {
					"type": "boolean",
					"default": false,
					"description": "Save bookmarks per workspace"
				},
				"JEXPLORER.autoSync": {
					"type": "boolean",
					"default": true,
					"description": "Automatically sync with file system changes"
				}
			}
		}
	},
	"scripts": {
		"watch": "tsc -watch -p .",
		"compile": "tsc -p .",
		"vsce": "vsce package",
		"npm-reset": "powershell -Command \"Remove-Item -Recurse -Force package-lock.json, node_modules; npm install --legacy-peer-deps;\"",
		"gcloud": "node gcloud.cjs"
	},
	"dependencies": {
		"@babel/core": "^7.26.0",
		"glob": "^11.0.0",
		"terser": "^5.36.0",
		"yaml": "^2.8.0"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^8.2.3",
		"@types/node": "^12.20.55",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"eslint": "^7.32.0",
		"glob": "^7.2.3",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5",
		"vscode-test": "^1.6.1"
	}
}